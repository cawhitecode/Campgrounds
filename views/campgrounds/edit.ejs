<% include ../partials/header %>
  <div class="row justify-content-center">
    <div class="col-md-12 text-center">
      <h1>Edit
        <%= campground.name %>
      </h1>
    </div>
    <hr>
    <div class="col-sm-8 col-md-6 col-lg-8">
      <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">
        <div class="form-group input-group-lg">
          <input class="form-control" type="text" name="name" placeholder="Name" value="<%= campground.name %>">
        </div>
        <div class="form-group input-group-lg">
          <input class="form-control" type="text" name="image" id="image" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." value="<%= campground.image %>"
            required>
          <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="price" id="price" placeholder="Price" value="<%= campground.price %>" step="0.01" min="0" required>
        </div>
        <div class="form-group input-group-lg">
          <input class="form-control" type="text" name="description" placeholder="Description" id="description" value="<%= campground.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Submit!</button>
        </div>
      </form>
    </div>
  </div>
  </div>
  <% include ../partials/footer %>