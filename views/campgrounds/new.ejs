<% include ../partials/header %>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-12 text-center">
        <h1>Create a New Campgound</h1>
      </div>
      <div class="col-sm-8 col-md-6 col-lg-5">
        <form action="/campgrounds" method="POST">
          <div class="form-group input-group-lg">
            <input class="form-control" type="text" name="name" placeholder="Name">
          </div>
          <div class="form-group input-group-lg">
            <input class="form-control" type="number" name="price" placeholder="Cost" min="0.00" step="0.01">
          </div>
          <div class="form-group input-group-lg">
            <input class="form-control" type="text" name="image" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/...">
          </div>
          <div class="form-group input-group-lg">
            <input class="form-control" type="text" name="description" placeholder="Description">
          </div>

          <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <% include ../partials/footer %>